<!-- templates/printerhistory_settings.jinja2 -->
<div id="printerhistory">
    <h3>Database Settings</h3>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-3" for="inputUser">User:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputUser" data-bind="value: user">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="inputPassword">Password:</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="inputPassword" data-bind="value: password">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="inputHost">Host:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputHost" data-bind="value: host">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="inputPort">Port:</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="inputPort" data-bind="value: port">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="inputDatabase">Database:</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="inputDatabase" data-bind="value: database">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="button" class="btn btn-primary" data-bind="click: saveDatabaseSettings">Save Settings</button>
            </div>
        </div>
    </form
